{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@component/*": ["./src/components/*"],
      "@page/*": ["./src/pages/*"],
      "@data/*": ["./src/data/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["vite.config.ts"]
}
